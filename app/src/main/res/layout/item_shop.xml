<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <data></data>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="@dimen/spacing_sixtyfour">
        <TextView
            android:id="@+id/shop_item_category_text"
            android:layout_width="match_parent"
            android:layout_height="@dimen/spacing_twentyfour"
            android:layout_marginTop="@dimen/spacing_eight"
            android:layout_marginLeft="@dimen/spacing_sixteen"
            android:layout_marginRight="@dimen/spacing_sixteen"
            android:gravity="bottom"
            android:textAllCaps="true"
            style="@style/secondary_text_view" />

        <TextView
            android:id="@+id/shop_item_name"
            android:layout_width="match_parent"
            android:layout_height="@dimen/spacing_twentyfour"
            android:layout_marginLeft="@dimen/spacing_sixteen"
            android:layout_marginRight="@dimen/spacing_sixteen"
            android:layout_marginBottom="@dimen/spacing_eight"
            style="@style/primary_text_view" />
    </LinearLayout>
</layout>
